{
    "name": "ptchr/magento2-rest-client",
    "description": "Magento 2 rest api client",
    "keywords": [
        "magento2",
        "rest",
        "api",
        "php"
    ],
    "homepage": "https://github.com/cmesptchr/magento2-rest-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Christiaan Mes",
            "email": "christiaan@ptchr.nl",
            "homepage": "https://ptchr.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6",
        "nesbot/carbon": "^2.36",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^5.1",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Ptchr\\Magento2RestClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ptchr\\Magento2RestClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
